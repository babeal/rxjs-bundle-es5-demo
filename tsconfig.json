{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "rootDir": "./scripts",
        "module": "es6",
        "outDir": "./dist/.tmp",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "downlevelIteration" : true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
}